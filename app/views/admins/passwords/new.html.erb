<div class="container vh-100 d-flex justify-content-center align-items-center">
  <div class="card p-4 col-md-5">
    <div class="card-body">
      <h1 class="h3 mb-5 text-center">Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "admins/shared/error_messages", resource: resource %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
        </div>

        <div class="d-grid">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary mb-3" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-link d-block text-decoration-none" %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-link mb-2 d-block text-decoration-none" %>
      </div>
    </div>
  </div>
</div>